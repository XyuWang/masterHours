<!DOCTYPE html>
<html>
<head>
  <title>MasterHours</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>

  <!-- bootstrap begin -->
  <link rel="stylesheet" href="http://lib.sinaapp.com/js/bootstrap/v3.0.0/css/bootstrap.min.css">
  <link rel="stylesheet" href="http://lib.sinaapp.com/js/bootstrap/v3.0.0/css/bootstrap-theme.min.css">
  <script src="http://lib.sinaapp.com/js/bootstrap/v3.0.0/js/bootstrap.min.js"></script>
  <!-- bootstrap end -->

</head>
<body>
  <div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#">Master Hours</a>
      </div>
      <div class="navbar-collapse collapse">
        <% if !user_signed_in? %>
          <%= form_for(User.new, :url => user_session_path, :html => {class: "navbar-form navbar-right"}) do |f| %>
            <div class="form-group">
              <%= f.email_field :email, :autofocus => true, placeholder: "邮箱", class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.password_field :password, placeholder: "密码", class: "form-control" %>
            </div>
            <button type="submit" class="btn btn-success">登录</button>
            <%= link_to "注册", new_user_registration_path, class: "btn btn-success" %>
          <% end %>
        <% end  %>
      </div><!--/.navbar-collapse -->
    </div>
  </div>

  <br />
  <br />
  <br />

  <!-- alert and notice begin -->
  <% if flash[:alert].present? %>
    <div class="alert alert-error">
      <button type="button" class="close" data-dismiss="alert">×</button>
      <h4>错误!</h4>    <strong><%= flash[:alert]%></strong>
    </div>
  <% end %>
  <% if flash[:notice].present? %>
    <div class="alert alert-success">
      <button type="button" class="close" data-dismiss="alert">×</button>
      <h4>通知!</h4>    <strong><%= flash[:notice]%></strong>
    </div>
  <% end %>
  <!-- alert and notice end-->

  <%= yield %>

</body>
</html>
